<!doctype html>
<html>
<head>
  <title><%= locals.title %> - Error Page</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="/public/css/core.min.css" rel="stylesheet">
  <link href="/public/css/thesaas.min.css" rel="stylesheet">
  <link href="/public/css/styles.css" rel="stylesheet">
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.js"></script>
    <style>
      .navbar-header {
          float: left;
          padding: 15px;
          text-align: center;
          width: 100%;
      }
      .nav-BG{
        margin-bottom: 0px; 
        border-radius: 0px; 
        background-color: white;
        -webkit-box-shadow: 0px 1px 3px 0px rgba(163,163,163,1);
        -moz-box-shadow: 0px 1px 3px 0px rgba(163,163,163,1);
        box-shadow: 0px 1px 3px 0px rgba(163,163,163,1);
      }
      .navbar-brand {float:none;}
    </style>
</head>
<body class="mh-fullscreen bg-img" style="background-image: url(/public/images/people-2557540_1920.jpg);">
<div class="container-fluid" style="padding: 0px;">
  <nav class="navbar nav navbar-default nav-BG" style="margin-bottom: 0px; border-radius: 0px;">
    <div class="container">
      <div class="navbar-header">
        <a href="/"><img class="logo-default" src="/public/images/logo-ex-6.png" alt="Entrenami logo" width="130px;"></a>
      </div>
    </div>
  </nav>

  <br>
  <div class="container" style="background-color: rgba(255, 255, 255, 0.5);">
    <div class="row">
      <div class="col-sm-12">
        <div class="py-40 px-40">
          <div class="media">
            <img src="/public/images/134-512.png" class="media-object img-fluid" width="150px;">
            <div class="media-body" style="padding-left: 20px;">
              <h1 class="media-heading text-danger">Oops!</h1>
              <h3><% if(!!error.status){%>
                Error: <%=  + error.status %>
              <%} else {%>
                <%= error %>
              <%}%>
              </h3><hr>
              <h3><%= message %></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>